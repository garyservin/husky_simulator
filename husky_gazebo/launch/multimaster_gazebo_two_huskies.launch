<launch>
  <arg name="world_name" default="worlds/empty.world"/>

  <arg name="laser_enabled" default="true"/>
  <arg name="ur5_enabled" default="false"/>
  <arg name="kinect_enabled" default="false"/>

  <!-- Gazebo world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world_name)"/> <!-- world_name is wrt GAZEBO_RESOURCE_PATH environment variable -->
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- ROBOT 1 model and configuration files -->
  <group ns="robot1">
    <rosparam command="load" file="$(find husky_control)/config/control.yaml" />
    <include file="$(find husky_gazebo)/launch/spawn_husky.launch">
      <arg name="laser_enabled" value="$(arg laser_enabled)"/>
      <arg name="ur5_enabled" value="$(arg ur5_enabled)"/>
      <arg name="kinect_enabled" value="$(arg kinect_enabled)"/>
      <arg name="init_pose" value="-x 1 -y 1 -z 0" />
      <arg name="multimaster_enabled" value="true"/>
      <arg name="robot_name" value="robot1" />
      <arg name="model" value="robot1" />
    </include>
  </group>

  <!-- ROBOT 2 model and configuration files -->
  <group ns="robot2">
    <rosparam command="load" file="$(find husky_control)/config/control.yaml" />
    <include file="$(find husky_gazebo)/launch/spawn_husky.launch">
      <arg name="laser_enabled" value="$(arg laser_enabled)"/>
      <arg name="ur5_enabled" value="$(arg ur5_enabled)"/>
      <arg name="kinect_enabled" value="$(arg kinect_enabled)"/>
      <arg name="init_pose" value="-x 3 -y 5 -z 0" />
      <arg name="multimaster_enabled" value="true"/>
      <arg name="robot_name" value="robot2" />
      <arg name="model" value="robot2" />
    </include>
    <!-- Publish static transform from robot's odometry to the general map using
         the initial position -->
    <node pkg="tf" type="static_transform_publisher" name="robot1_odom_static" args="1 1 0 0 0 0 1 map robot1/odom 200"></node>
    <node pkg="tf" type="static_transform_publisher" name="robot2_odom_static" args="-3 -5 0 0 0 0 1 map robot2/odom 200"></node>
  </group>

  <!-- Multimaster configuration for Gezebo master -->
  <include file="$(find multimaster_launch)/launch/multimaster_gazebo_master.launch" />
</launch>
